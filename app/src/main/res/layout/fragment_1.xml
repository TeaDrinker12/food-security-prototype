<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment1">

    <LinearLayout
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="70dp"
            android:layout_marginVertical="25dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Welcome to Food and Environment Statistics App"
            android:textAlignment="center"
            android:textSize="24sp" />

        <FrameLayout
            android:id="@+id/card_rice_statistics"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="1">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:alpha="0.8"
                android:cropToPadding="true"
                android:src="@drawable/saudi_rice" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:layout_marginVertical="50dp"
                android:text="Rice"
                android:textColor="@color/white"
                android:textSize="40dp" />

            <Button
                android:id="@+id/button_rice_statistics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginHorizontal="50dp"
                android:layout_marginVertical="50dp"
                android:backgroundTint="#FFC107"
                android:text="See Statistics" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/card_water_statistics"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="1">

            <ImageView
                android:id="@+id/imageView_water"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:alpha="0.8"
                android:cropToPadding="true"
                android:src="@drawable/hlpf_policybrief_june19_image" />

            <TextView
                android:id="@+id/textView3_water"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:layout_marginVertical="50dp"
                android:text="Water"
                android:textColor="@color/white"
                android:textSize="40dp" />

            <Button
                android:id="@+id/button_water_statistics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginHorizontal="50dp"
                android:layout_marginVertical="50dp"
                android:backgroundTint="#2196F3"
                android:text="See Statistics" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/card_wheat_statistics"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="1">

            <ImageView
                android:id="@+id/imageView_wheat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:alpha="0.8"
                android:cropToPadding="true"
                android:src="@drawable/_600px_wheat_p1210892" />

            <TextView
                android:id="@+id/textView3_wheat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:layout_marginVertical="50dp"
                android:text="Wheat"
                android:textColor="@color/white"
                android:textSize="40dp" />

            <Button
                android:id="@+id/button_wheat_statistics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginHorizontal="50dp"
                android:layout_marginVertical="50dp"
                android:backgroundTint="#FF9800"
                android:text="See Statistics" />

        </FrameLayout>

    </LinearLayout>

</ScrollView>